                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/separador_distancia" />

                    <TextView
                        android:id="@+id/valor_frete_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_valor_zero"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintBaseline_toBaselineOf="@id/valor_frete_label_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/valor_frete_label_text" />

                    <View
                        android:id="@+id/separador_fino"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_large"
                        android:alpha="0.15"
                        android:background="?attr/colorOutline"
                        app:layout_constraintEnd_toEndOf="parent"
