<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FA">

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="32dp">

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tv_subtitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/subtitle_preencha_campos"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="@string/subtitle_preencha_campos"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="#546E7A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Card Principal de Cálculo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitulo"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_titulo_calcular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/title_calculo_valor"
                        android:gravity="start"
                        android:letterSpacing="0.005"
                        android:text="@string/title_calculo_valor"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Categoria do Animal -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_categoria_animal"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="@string/label_categoria_animal"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#2196F3"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#78909C"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_titulo_calcular">

                        <AutoCompleteTextView
                            android:id="@+id/actv_categoria_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingVertical="14dp"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Preço da Arroba -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_preco_arroba"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/label_preco_arroba"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#2196F3"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#78909C"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/til_categoria_animal"
                        app:placeholderText="0,00"
                        app:placeholderTextColor="#B0BEC5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_preco_arroba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Quantidade -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_quantidade_animais"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/label_quantidade_animais"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#2196F3"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#78909C"
                        app:placeholderText="0"
                        app:placeholderTextColor="#B0BEC5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/til_preco_arroba">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_quantidade_animais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingVertical="14dp"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Peso -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_peso_animal"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/label_peso_animal"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#2196F3"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#78909C"
                        app:placeholderText="150 kg"
                        app:placeholderTextColor="#B0BEC5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/til_quantidade_animais">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_peso_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#263238" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Resultado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_resultado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_container"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/container_valores"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Resultado Cabeça -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_valor_cabeca"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#E3F2FD"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tv_label_valor_cabeca"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/valor_cabeca"
                                    android:letterSpacing="0.02"
                                    android:text="@string/valor_cabeca"
                                    android:textAppearance="?attr/textAppearanceBodySmall"
                                    android:textColor="#546E7A" />

                                <TextView
                                    android:id="@+id/tv_valor_cabeca"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textAppearance="?attr/textAppearanceTitleLarge"
                                    android:textColor="#1976D2"
                                    android:textStyle="bold"
                                    tools:text="R$ 2.500,00" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Resultado KG -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_valor_kg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#E3F2FD"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tv_label_valor_kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/valor_por_kg"
                                    android:letterSpacing="0.02"
                                    android:text="@string/valor_por_kg"
                                    android:textAppearance="?attr/textAppearanceBodySmall"
                                    android:textColor="#546E7A" />

                                <TextView
                                    android:id="@+id/tv_valor_kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textAppearance="?attr/textAppearanceTitleLarge"
                                    android:textColor="#1976D2"
                                    android:textStyle="bold"
                                    tools:text="R$ 15,50" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Resultado Total -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_valor_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="#2196F3"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/container_valores"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">

                            <ImageView
                                android:id="@+id/icon_valor_total"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_attach_money"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:id="@+id/tv_label_valor_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="@string/valor_total_estimado"
                                android:text="@string/valor_total_estimado"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="#FFFFFF"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tv_valor_total"
                                app:layout_constraintStart_toEndOf="@id/icon_valor_total"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_valor_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="R$ 2.657,14" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Frete -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_frete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_resultado"
                app:strokeColor="#E3F2FD"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_titulo_frete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/title_calculo_frete"
                        android:gravity="start"
                        android:letterSpacing="0.005"
                        android:text="@string/title_calculo_frete"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Card Recomendação -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_recomendacao_transporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#E3F2FD"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_titulo_frete"
                        app:strokeWidth="0dp"
                        tools:visibility="visible">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iv_icone_info"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_info"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="#2196F3" />

                            <TextView
                                android:id="@+id/tv_cabecalho_recomendacao"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:contentDescription="@string/recomendacao_transporte"
                                android:text="@string/recomendacao_transporte"
                                android:textAppearance="?attr/textAppearanceTitleSmall"
                                android:textColor="#1976D2"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/iv_icone_info"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iv_icone_info"
                                app:layout_constraintTop_toTopOf="@id/iv_icone_info" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_recomendacoes_transporte"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_cabecalho_recomendacao"
                                tools:itemCount="1"
                                tools:listitem="@layout/item_recomendacao" />

                            <TextView
                                android:id="@+id/tv_motivo_recomendacao"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="3dp"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="#546E7A"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rv_recomendacoes_transporte"
                                tools:text="Otimização para redução de custo por km."
                                tools:visibility="visible" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botão Calcular -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calcular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="0dp"
                android:contentDescription="@string/desc_botao_calcular"
                android:letterSpacing="0.02"
                android:minHeight="56dp"
                android:text="@string/btn_calcular"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#2196F3"
                app:cornerRadius="16dp"
                app:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_frete" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>