<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/conteudo_scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/enviar_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conteudo_principal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large">

            <TextView
                android:id="@+id/instrucao_subtitulo_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/info_preencher_campos_para_calcular"
                android:gravity="center"
                android:text="@string/info_preencher_campos_para_calcular"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dados_animal_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/instrucao_subtitulo_text"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_large">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/categoria_animal_input_layout"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/categoria_animal_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_categoria_animal"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/preco_arroba_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/categoria_animal_input_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/preco_arroba_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_preco_arroba"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/peso_animal_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/preco_arroba_input_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/peso_animal_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_peso_animal"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/quantidade_animais_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/peso_animal_input_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/quantidade_animais_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_quantidade_animais"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultado_card"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="0dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/dados_animal_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/valor_por_cabeca_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:layout_constraintWidth_percent="0.48"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/valor_por_kg_card"
                        app:layout_constraintHorizontal_chainStyle="spread_inside">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium">

                            <TextView
                                android:id="@+id/valor_por_cabeca_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rotulo_valor_por_cabeca"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/valor_por_cabeca_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:textAlignment="center"
                                tools:text="@string/preview_valor_por_cabeca" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/valor_por_kg_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:layout_constraintWidth_percent="0.48"
                        app:layout_constraintTop_toTopOf="@id/valor_por_cabeca_card"
                        app:layout_constraintStart_toEndOf="@id/valor_por_cabeca_card"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium">

                            <TextView
                                android:id="@+id/valor_por_kg_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rotulo_valor_por_kg"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/valor_por_kg_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:textAlignment="center"
                                tools:text="@string/preview_valor_por_kg" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/valor_total_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:layout_constraintTop_toBottomOf="@id/valor_por_cabeca_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin_medium">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/padding_large">

                            <TextView
                                android:id="@+id/valor_total_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/valor_final_total"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/valor_total_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                tools:text="@string/preview_valor_total" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <include
                android:id="@+id/container_recomendation"
                layout="@layout/unit_recomendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultado_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adicionar_localizacao_card"
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:alpha="0.6"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_recomendation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium">

                    <ImageView
                        android:id="@+id/localizacao_icon"
                        android:layout_width="@dimen/size_large"
                        android:layout_height="@dimen/size_large"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_location_on"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/button_fragment_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/btn_preview_card_rota"
                android:visibility="gone"
                tools:visibility="visible"
                app:cornerRadius="@dimen/corner_radius_small"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/adicionar_localizacao_card"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ajuste_km_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_fragment_location">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_large">

                    <ImageView
                        android:id="@+id/ajuste_icon"
                        android:layout_width="@dimen/size_small"
                        android:layout_height="@dimen/size_small"
                        android:src="@drawable/ic_info"
                        android:contentDescription="@string/info_ajuste_distancia_frete"
                        app:tint="?attr/colorSecondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ajuste_titulo_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/info_ajuste_distancia_frete"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintStart_toEndOf="@id/ajuste_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ajuste_icon"
                        app:layout_constraintBottom_toBottomOf="@id/ajuste_icon" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:background="?attr/colorOutlineVariant"
                        android:alpha="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ajuste_titulo_text" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/km_adicional_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:hint="@string/rotulo_km_adicionais"
                        app:helperText="@string/ajuda_km_adicionais"
                        app:helperTextEnabled="true"
                        app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                        app:endIconMode="clear_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/km_adicional_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/text_size_normal"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/atalhos_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="Atalhos rÃ¡pidos"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/km_adicional_input_layout" />

                    <LinearLayout
                        android:id="@+id/atalhos_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/atalhos_label">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/adicionar_5km_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="@string/atalho_mais_5"
                            android:textSize="@dimen/text_size_small"
                            app:cornerRadius="@dimen/corner_radius_round"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/adicionar_10km_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="@string/atalho_mais_10"
                            android:textSize="@dimen/text_size_small"
                            app:cornerRadius="@dimen/corner_radius_round"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/local_partida_adicionar_20km_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_small"
                            android:text="@string/atalho_mais_20"
                            android:textSize="@dimen/text_size_small"
                            app:cornerRadius="@dimen/corner_radius_round"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/confirmar_ajuste_button"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="@string/btn_confirmar_ajuste"
                        android:textSize="@dimen/text_size_normal"
                        app:cornerRadius="@dimen/corner_radius_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/atalhos_container" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/valor_frete_final_card"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ajuste_km_card"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_large">

                    <!-- Card de Rota -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rota_resumo_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_large">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5" />

                            <TextView
                                android:id="@+id/origem_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/rotulo_origem"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toStartOf="@id/guideline_center"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/origem_valor_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/preview_origem"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toStartOf="@id/divider_vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/origem_label_text" />

                            <View
                                android:id="@+id/divider_vertical"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:alpha="0.15"
                                android:background="?attr/colorOutline"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@id/guideline_center"
                                app:layout_constraintStart_toStartOf="@id/guideline_center"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/destino_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/rotulo_destino"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/guideline_center"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/destino_valor_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_marginTop="@dimen/margin_small"
                                android:ellipsize="end"
                                android:gravity="end"
                                android:maxLines="2"
                                android:text="@string/preview_destino"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/divider_vertical"
                                app:layout_constraintTop_toBottomOf="@id/destino_label_text" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/distancia_label_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="@string/rotulo_distancia_km"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintEnd_toStartOf="@id/distancia_valor_text"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rota_resumo_card" />

                    <TextView
                        android:id="@+id/distancia_valor_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_distancia_zero"
                        android:textSize="@dimen/text_size_normal"
