<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/conteudo_scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/enviar_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conteudo_principal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_padrao">

            <TextView
                android:id="@+id/instrucao_subtitulo_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/instrucao_preencher_campos"
                android:gravity="center"
                android:text="@string/instrucao_preencher_campos"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dados_animal_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/instrucao_subtitulo_text"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_card">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/categoria_animal_input_layout"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/categoria_animal_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_categoria_animal"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/preco_arroba_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_input"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/categoria_animal_input_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/preco_arroba_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_preco_arroba"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/peso_animal_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_input"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/preco_arroba_input_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/peso_animal_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_peso_animal"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/quantidade_animais_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_input"
                        app:boxStrokeErrorColor="?attr/colorError"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/peso_animal_input_layout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/quantidade_animais_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rotulo_quantidade_animais"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultado_card"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dados_animal_card"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_card">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/valor_por_cabeca_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toStartOf="@id/valor_por_kg_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_card">

                            <TextView
                                android:id="@+id/valor_por_cabeca_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/rotulo_valor_por_cabeca"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/valor_por_cabeca_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_section"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/valor_por_cabeca_label_text"
                                tools:text="@string/preview_valor_por_cabeca" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/valor_por_kg_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_section"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/valor_por_cabeca_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/valor_por_cabeca_card"
                        app:layout_constraintTop_toTopOf="@id/valor_por_cabeca_card"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_card">

                            <TextView
                                android:id="@+id/valor_por_kg_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/rotulo_valor_por_kg"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/valor_por_kg_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_section"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/valor_por_kg_label_text"
                                tools:text="@string/preview_valor_por_kg" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/valor_total_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/valor_por_cabeca_card"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_card">

                            <TextView
                                android:id="@+id/valor_total_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/valor_final_total"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/valor_total_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_section"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/valor_total_label_text"
                                tools:text="@string/preview_valor_total" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <include
                android:id="@+id/container_recomendation"
                layout="@layout/unit_recomendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultado_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adicionar_localizacao_card"
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                android:alpha="0.6"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_recomendation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:id="@+id/localizacao_icon"
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:contentDescription="@string/descricao_generica_todo"
                        android:src="@drawable/ic_location_on"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/button_fragment_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                android:text="@string/preview_rota_card"
                android:visibility="gone"
                app:cornerRadius="@dimen/corner_radius_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/adicionar_localizacao_card"
                tools:visibility="visible" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ajuste_km_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_fragment_location"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_card">

                    <ImageView
                        android:id="@+id/ajuste_icon"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_info"
                        app:layout_constraintBottom_toBottomOf="@id/ajuste_titulo_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/ajuste_titulo_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_section"
                        android:text="@string/informacao_ajuste_distancia"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ajuste_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/km_adicional_input_layout"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        android:hint="@string/rotulo_km_adicionais"
                        app:endIconMode="clear_text"
                        app:helperText="@string/helper_km_adicionais"
                        app:helperTextEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ajuste_titulo_text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/km_adicional_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/text_size_normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/adicionar_5km_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        android:text="@string/atalho_mais_5"
                        android:textSize="@dimen/text_size_small"
                        app:cornerRadius="@dimen/corner_radius_small"
                        app:layout_constraintEnd_toStartOf="@id/adicionar_10km_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/km_adicional_input_layout"
                        app:layout_constraintWidth_percent="0.3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/adicionar_10km_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/atalho_mais_10"
                        android:textSize="@dimen/text_size_small"
                        app:cornerRadius="@dimen/corner_radius_small"
                        app:layout_constraintEnd_toStartOf="@id/local_partida_adicionar_20km_button"
                        app:layout_constraintStart_toEndOf="@id/adicionar_5km_button"
                        app:layout_constraintTop_toTopOf="@id/adicionar_5km_button"
                        app:layout_constraintWidth_percent="0.3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/local_partida_adicionar_20km_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/atalho_mais_20"
                        android:textSize="@dimen/text_size_small"
                        app:cornerRadius="@dimen/corner_radius_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/adicionar_10km_button"
                        app:layout_constraintTop_toTopOf="@id/adicionar_5km_button"
                        app:layout_constraintWidth_percent="0.3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/confirmar_ajuste_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        android:text="@string/botao_confirmar_ajuste"
                        android:textSize="@dimen/text_size_small"
                        app:cornerRadius="@dimen/corner_radius_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/local_partida_adicionar_20km_button" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/valor_frete_final_card"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_section"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ajuste_km_card"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_card">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rota_resumo_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer"
                        app:cardCornerRadius="@dimen/corner_radius_large"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeWidth="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_card">

                            <TextView
                                android:id="@+id/origem_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/rotulo_origem"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toStartOf="@id/divider_vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/origem_valor_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_section"
                                android:text="@string/preview_origem_sp"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toStartOf="@id/divider_vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/origem_label_text" />

                            <View
                                android:id="@+id/divider_vertical"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_marginHorizontal="@dimen/margin_section"
                                android:alpha="0.15"
                                android:background="?attr/colorOutline"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/destino_valor_text"
                                app:layout_constraintStart_toEndOf="@id/origem_valor_text"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/destino_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/rotulo_destino"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/divider_vertical"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/destino_valor_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_section"
                                android:gravity="end"
                                android:text="@string/preview_destino_mt"
                                android:textSize="@dimen/text_size_normal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/divider_vertical"
                                app:layout_constraintTop_toBottomOf="@id/destino_label_text" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/distancia_label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        android:text="@string/rotulo_distancia_km"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rota_resumo_card" />

                    <TextView
                        android:id="@+id/distancia_valor_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_section"
                        android:text="@string/preview_distancia_zero"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintBaseline_toBaselineOf="@id/distancia_label_text"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/separador_distancia"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_section"
                        android:alpha="0.15"
                        android:background="?attr/colorOutline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/distancia_label_text" />

                    <TextView
                        android:id="@+id/valor_frete_label_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        android:text="@string/rotulo_valor_frete"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintEnd_toStartOf="@id/valor_frete_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/separador_distancia" />

                    <TextView
                        android:id="@+id/valor_frete_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_valor_zero"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintBaseline_toBaselineOf="@id/valor_frete_label_text"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Separador -->
                    <View
                        android:id="@+id/separador_fino"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/margin_section"
                        android:alpha="0.15"
                        android:background="?attr/colorOutline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/valor_frete_label_text" />

                    <TextView
                        android:id="@+id/valor_total_final_label_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_section"
                        android:text="@string/rotulo_valor_total_final"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintEnd_toStartOf="@id/valor_total_final_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/separador_fino" />

                    <TextView
                        android:id="@+id/valor_total_final_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_valor_zero"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintBaseline_toBaselineOf="@id/valor_total_final_label_text"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enviar_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_card"
        android:text="@string/botao_enviar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />


    <include
        layout="@layout/bottom_sheet_location"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>