            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_frete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:letterSpacing="-0.02"
                        android:text="Cálculo de Frete"
                        android:textColor="#1D1D1F"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Tipo de Transporte (Spinner/Dropdown) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_transport_type"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="Tipo de transporte"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF">

                        <AutoCompleteTextView
                            android:id="@+id/field_transport_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Distância em KM -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_distance_km"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="Distância em quilômetros"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:cursorColor="#007AFF"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="#007AFF"
                        app:placeholderText=" 000 km"
                        app:placeholderTextColor="#C7C7CC"
                        app:suffixText=" km"
                        app:suffixTextColor="#C7C7CC">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_distance_km"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Card de Capacidade (Info) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_capacity_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#F5F5F7"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Capacidade do Transporte"
                                android:textColor="#1D1D1F"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Bois:"
                                    android:textColor="#86868B"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/text_capacity_bois"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="#1D1D1F"
                                    android:textSize="14sp"
                                    tools:text="18" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Vacas:"
                                    android:textColor="#86868B"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/text_capacity_vacas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="#1D1D1F"
                                    android:textSize="14sp"
                                    tools:text="20" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Bezerros:"
                                    android:textColor="#86868B"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/text_capacity_bezerros"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="#1D1D1F"
                                    android:textSize="14sp"
                                    tools:text="35 - 38" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Resultado do Frete -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_frete_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tipo de Transporte -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Tipo de Transporte"
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_frete_transport_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1D1D1F"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="TRUCK" />
                    </LinearLayout>

                    <!-- Linha divisória -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#E5E5EA" />

                    <!-- Distância -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Distância"
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_frete_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#1D1D1F"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="150 km" />
                    </LinearLayout>

                    <!-- Linha divisória -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#E5E5EA" />

                    <!-- Valor do Frete -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
