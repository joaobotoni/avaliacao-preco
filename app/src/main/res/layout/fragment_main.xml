<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:text="@string/subtitle_fill_fields"
                    android:textColor="#86868B"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/calculate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:letterSpacing="-0.02"
                        android:text="@string/title_calculate"
                        android:textColor="#1D1D1F"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_categoria"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="Categoria do animal"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF">

                        <AutoCompleteTextView
                            android:id="@+id/field_categoria_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_nodes_arroba_price"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="Valor da arroba"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:cursorColor="#007AFF"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="#007AFF"
                        app:placeholderText=" 0,00"
                        app:placeholderTextColor="#C7C7CC"
                        app:prefixTextColor="#C7C7CC"
                        app:prefixText="R$ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_arroba_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_percentage"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="Percentual de ágio"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:cursorColor="#007AFF"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="#007AFF"
                        app:placeholderText=" 0,0%"
                        app:placeholderTextColor="#C7C7CC">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_qtd"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="@string/label_qtd_animal"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:cursorColor="#007AFF"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="#007AFF"
                        app:placeholderText=" 123"
                        app:placeholderTextColor="#C7C7CC">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_qtd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_weight"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:hint="Peso do bezerro"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:cursorColor="#007AFF"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="#007AFF"
                        app:placeholderText=" 000 kg"
                        app:placeholderTextColor="#C7C7CC">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textColor="#1D1D1F"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Valor do Bezerro -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Valor do Bezerro"
                            android:textColor="#666666"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/text_calf_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="R$ 1.850,00" />
                    </LinearLayout>

                    <!-- Linha divisória -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#E5E5EA" />

                    <!-- Valor Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Valor Total"
                            android:textColor="#666666"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/text_result_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2E7D32"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="R$ 2.657,14" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


