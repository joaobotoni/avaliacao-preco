<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="20dp">

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tv_subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:text="@string/subtitle_preencha_campos"
                android:textSize="14sp"
                android:textColor="#86868B"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Card Principal de Cálculo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_titulo_calcular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:text="@string/title_calculo_valor"
                        android:textSize="18sp"
                        android:textColor="#1D1D1F"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Categoria do Animal -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_categoria_animal"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:hint="@string/label_categoria_animal"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF"
                        app:layout_constraintTop_toBottomOf="@id/tv_titulo_calcular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/actv_categoria_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:paddingVertical="14dp"
                            android:textSize="14sp"
                            android:textColor="#1D1D1F"
                            android:importantForAccessibility="yes" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Preço da Arroba -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_preco_arroba"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:hint="@string/label_preco_arroba"
                        app:placeholderText="@string/placeholder_preco"
                        app:placeholderTextColor="#C7C7CC"
                        app:prefixText="@string/prefix_moeda"
                        app:prefixTextColor="#C7C7CC"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:layout_constraintTop_toBottomOf="@id/til_categoria_animal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_preco_arroba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textSize="14sp"
                            android:textColor="#1D1D1F" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Percentual de Ágio -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_percentual_agio"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:hint="@string/label_percentual_agio"
                        app:placeholderText="@string/placeholder_percentual"
                        app:placeholderTextColor="#C7C7CC"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:layout_constraintTop_toBottomOf="@id/til_preco_arroba"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_percentual_agio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textSize="14sp"
                            android:textColor="#1D1D1F" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Quantidade de Animais -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_quantidade_animais"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:hint="@string/label_quantidade_animais"
                        app:placeholderText="@string/placeholder_quantidade"
                        app:placeholderTextColor="#C7C7CC"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:layout_constraintTop_toBottomOf="@id/til_percentual_agio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_quantidade_animais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingVertical="14dp"
                            android:textSize="14sp"
                            android:textColor="#1D1D1F" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Peso do Animal -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_peso_animal"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:hint="@string/label_peso_animal"
                        app:placeholderText="@string/placeholder_peso"
                        app:placeholderTextColor="#C7C7CC"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:layout_constraintTop_toBottomOf="@id/til_quantidade_animais"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_peso_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="14dp"
                            android:textSize="14sp"
                            android:textColor="#1D1D1F" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Resultado Valor -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_resultado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone" tools:visibility="visible"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_label_valor_cabeca"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_valor_por_cabeca"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_valor_cabeca"
                        app:layout_constraintTop_toTopOf="@id/tv_valor_cabeca"
                        app:layout_constraintBottom_toBottomOf="@id/tv_valor_cabeca" />

                    <TextView
                        android:id="@+id/tv_valor_cabeca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="R$ 1.850,00" />

                    <View
                        android:id="@+id/divider_resultado"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E5E5EA"
                        app:layout_constraintTop_toBottomOf="@id/tv_valor_cabeca"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_label_valor_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_valor_total"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_valor_total"
                        app:layout_constraintTop_toTopOf="@id/tv_valor_total"
                        app:layout_constraintBottom_toBottomOf="@id/tv_valor_total" />

                    <TextView
                        android:id="@+id/tv_valor_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        app:layout_constraintTop_toBottomOf="@id/divider_resultado"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="R$ 2.657,14" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Frete -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_frete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_resultado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_titulo_frete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_calculo_frete"
                        android:textSize="18sp"
                        android:textColor="#1D1D1F"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- card_recomendacao_transporte.xml -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_recomendacao_transporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:cardBackgroundColor="#E9F3FE"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#D0E2FF"
                        app:layout_constraintTop_toBottomOf="@id/tv_titulo_frete"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp">

                            <!-- Cabeçalho alinhado e suave -->
                            <ImageView
                                android:id="@+id/iv_icone_info"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_info"
                                app:tint="#1976D2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_cabecalho_recomendacao"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/recomendacao_transporte"
                                android:textSize="13sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/iv_icone_info"
                                app:layout_constraintTop_toTopOf="@id/iv_icone_info"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/iv_icone_info"/>

                            <!-- Lista minimalista -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_recomendacoes_transporte"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintTop_toBottomOf="@id/tv_cabecalho_recomendacao"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:itemCount="3"
                                tools:listitem="@layout/item_recomendacao" />

                            <!-- Motivo opcional com estilo -->
                            <TextView
                                android:id="@+id/tv_motivo_recomendacao"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:textSize="13sp"
                                android:textColor="#455A64"
                                android:lineSpacingExtra="2dp"
                                android:visibility="gone"
                                android:includeFontPadding="false"
                                app:layout_constraintTop_toBottomOf="@id/rv_recomendacoes_transporte"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:visibility="visible"
                                tools:text="Distribuição ideal para 92 bois com menor custo por quilômetro." />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <!-- Distância -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_distancia_km"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:hint="@string/label_distancia_km"
                        app:placeholderText="@string/placeholder_distancia"
                        app:placeholderTextColor="#C7C7CC"
                        app:suffixText="@string/suffix_km"
                        app:suffixTextColor="#C7C7CC"
                        app:boxStrokeColor="#007AFF"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#007AFF"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusTopStart="14dp"
                        app:layout_constraintTop_toBottomOf="@id/card_recomendacao_transporte"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_distancia_km"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingVertical="14dp"
                            android:textSize="14sp"
                            android:textColor="#1D1D1F" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Resultado Frete -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_resultado_frete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone" tools:visibility="visible"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_frete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_label_tipo_transporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_tipo_transporte"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_tipo_transporte"
                        app:layout_constraintTop_toTopOf="@id/tv_tipo_transporte"
                        app:layout_constraintBottom_toBottomOf="@id/tv_tipo_transporte" />

                    <TextView
                        android:id="@+id/tv_tipo_transporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp"
                        android:textColor="#1D1D1F"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="TRUCK" />

                    <View
                        android:id="@+id/divider_frete_1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E5E5EA"
                        app:layout_constraintTop_toBottomOf="@id/tv_tipo_transporte"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_label_distancia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_distancia"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_distancia_frete"
                        app:layout_constraintTop_toTopOf="@id/tv_distancia_frete"
                        app:layout_constraintBottom_toBottomOf="@id/tv_distancia_frete" />

                    <TextView
                        android:id="@+id/tv_distancia_frete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp"
                        android:textColor="#1D1D1F"
                        app:layout_constraintTop_toBottomOf="@id/divider_frete_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="150 km" />

                    <View
                        android:id="@+id/divider_frete_2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E5E5EA"
                        app:layout_constraintTop_toBottomOf="@id/tv_distancia_frete"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_label_valor_frete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_valor_frete"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_valor_frete"
                        app:layout_constraintTop_toTopOf="@id/tv_valor_frete"
                        app:layout_constraintBottom_toBottomOf="@id/tv_valor_frete" />

                    <TextView
                        android:id="@+id/tv_valor_frete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        android:textColor="#007AFF"
                        app:layout_constraintTop_toBottomOf="@id/divider_frete_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="R$ 1.980,00" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botão Calcular -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calcular"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btn_calcular"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#007AFF"
                app:cornerRadius="14dp"
                app:elevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_resultado_frete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/desc_botao_calcular" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>