<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView para suportar conteúdo maior que a tela -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/screen_padding">

            <!-- Card Container Principal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/text_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/title_calculate"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <!-- Subtítulo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:gravity="center"
                        android:text="@string/subtitle_fill_fields"
                        android:textSize="@dimen/text_size_body" />

                    <!-- Campo: Valor da Arroba -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_arroba_price"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:hint="@string/hint_arroba_price"
                        app:prefixText="@string/prefix_currency">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_arroba_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo: Percentual de Ágio -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_percentage"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:hint="@string/hint_percentage"
                        app:prefixText="@string/prefix_percentage">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo: Peso do Bezerro -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_weight"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:hint="@string/hint_weight"
                        app:prefixText="@string/prefix_weight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botão Calcular -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_calculate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/button_calculate"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_size_button"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/button_corner_radius" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Resultado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/result_card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="@string/label_result"
                        android:textSize="@dimen/text_size_body" />

                    <TextView
                        android:id="@+id/text_result_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="@dimen/text_size_result"
                        android:textStyle="bold"
                        tools:text="R$ 2.657,14" />

                    <View
                        android:layout_width="@dimen/divider_width"
                        android:layout_height="@dimen/divider_height"
                        android:layout_marginTop="@dimen/spacing_medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Análise (Valor Proposto e VAR%) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_analysis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_result">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- Título da Análise -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/title_analysis"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <!-- Campo: Valor Proposto -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_proposed_value"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:hint="@string/hint_proposed_value"
                        app:prefixText="@string/prefix_currency">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/field_proposed_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Resultado VAR% -->
                    <LinearLayout
                        android:id="@+id/container_var_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_small"
                            android:text="@string/label_var_percentage"
                            android:textSize="@dimen/text_size_body" />

                        <TextView
                            android:id="@+id/text_var_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            tools:text="+15,5%" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>