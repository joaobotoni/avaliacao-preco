                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/separador_fino" />

                    <TextView
                        android:id="@+id/valor_total_final_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_valor_zero"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintBaseline_toBaselineOf="@id/valor_total_final_label_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/valor_total_final_label_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>
