<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_medium"
    android:paddingVertical="@dimen/margin_small">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/origem_destino_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/corner_radius_small"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp">

            <ImageView
                android:id="@+id/destino_icon"
                android:layout_width="@dimen/size_small"
                android:layout_height="@dimen/size_small"
                android:layout_marginStart="14dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_circle"
                app:layout_constraintBottom_toBottomOf="@id/destino_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/destino_input_layout"
                app:tint="?attr/colorPrimary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/destino_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/destino_icon"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/destino_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="postalAddress|streetAddress"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:paddingStart="@dimen/margin_small"
                    android:paddingTop="14dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="15sp"
                    tools:hint="@string/rotulo_endereco_destino" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/destino_origem_separador"
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="42dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destino_input_layout" />

            <View
                android:id="@+id/linha_conectora"
                android:layout_width="1.5dp"
                android:layout_height="25dp"
                android:layout_marginStart="23dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/origem_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destino_icon" />

            <ImageView
                android:id="@+id/origem_icon"
                android:layout_width="@dimen/size_small"
                android:layout_height="@dimen/size_small"
                android:layout_marginStart="14dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_circle"
                app:layout_constraintBottom_toBottomOf="@id/origem_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/origem_input_layout"
                app:tint="?attr/colorPrimary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/origem_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/origem_icon"
                app:layout_constraintTop_toBottomOf="@id/destino_origem_separador">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/origem_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="postalAddress|streetAddress"
                    android:background="@null"
                    android:hint="@string/rotulo_endereco_origem"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="yes"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:paddingStart="@dimen/margin_small"
                    android:paddingTop="14dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>