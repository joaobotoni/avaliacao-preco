<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/iv_icone_localizacao"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_location_on"
        app:tint="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="SÃ£o Paulo"
        app:layout_constraintStart_toEndOf="@id/iv_icone_localizacao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/v_separador"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/circle_separator"
        app:layout_constraintStart_toEndOf="@id/tv_cidade"
        app:layout_constraintTop_toTopOf="@id/tv_cidade"
        app:layout_constraintBottom_toBottomOf="@id/tv_cidade" />

    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="SP"
        app:layout_constraintStart_toEndOf="@id/v_separador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_cidade"
        app:layout_constraintBottom_toBottomOf="@id/tv_cidade" />

</androidx.constraintlayout.widget.ConstraintLayout>